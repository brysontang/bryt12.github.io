---
/**
 * lab.astro - The Lab (Research + Engineering)
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE_DATA } from '../consts/siteData';

const { research, engineering } = SITE_DATA;
---

<BaseLayout
  title="The Lab"
  description="Research and engineering projects focused on fast-weight architectures, experimental frameworks, and production AI systems."
  dateBadge="/sys/research"
>
  <h1>[ The Lab ]</h1>
  <p>
    The domain of Applied Intelligence. <em>Research: the microscopes. Engineering: looking through them.</em>
  </p>

  <div class="decorative-hr">~ ~ ~ &#9672; ~ ~ ~</div>

  <h3>Research & Foundations</h3>
  <p class="mono" style="font-size: 0.85rem; color: var(--dim-text); margin-bottom: 25px;">
    Experimental architectures, protocols, and rigorous frameworks.
  </p>

  <div class="project-grid">
    {
      research.map((project) => (
        <div class="project-card research-card">
          <h4>{project.name}</h4>
          <p class="mono" style="font-size: 0.8rem; color: var(--dim-text)">
            {project.tags.join(' | ')}
          </p>
          <p>{project.description}</p>
          <div class="project-links">
            {project.links.map((link) => (
              <a href={link.url} target="_blank" rel="noopener noreferrer">
                [ {link.label} ]
              </a>
            ))}
          </div>
        </div>
      ))
    }
  </div>

  <div class="decorative-hr">~ ~ ~</div>

  <h3>Applied Engineering</h3>
  <p class="mono" style="font-size: 0.85rem; color: var(--dim-text); margin-bottom: 25px;">
    Production systems, tools, and deployed products.
  </p>

  <div class="project-grid">
    {
      engineering.map((project) => (
        <div class="project-card">
          <h4>{project.name}</h4>
          <p class="mono" style="font-size: 0.8rem; color: var(--dim-text)">
            {project.tags.join(' | ')}
          </p>
          <p>{project.description}</p>
          <div class="project-links">
            {project.links.map((link) => (
              <a href={link.url} target="_blank" rel="noopener noreferrer">
                [ {link.label} ]
              </a>
            ))}
          </div>
        </div>
      ))
    }
  </div>
</BaseLayout>

<style>
  .decorative-hr {
    text-align: center;
    color: var(--dim-text);
    margin: 40px 0 30px 0;
    font-size: 0.9rem;
    letter-spacing: 0.15em;
  }

  .research-card {
    border-left: 2px solid var(--link);
  }
</style>
